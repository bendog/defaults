# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
trim_trailing_whitespace = true

[*.{json,json5,yaml,yml,toml}]
indent_size = 2

[*.{js,jsx,ts,tsx,vue}]
indent_size = 2
block_comment_start = /**
block_comment = *
block_comment_end = */

[*.{htm,html,css,sass,scss,less,svg}]
indent_size = 2

[*.{sh,bat.tpl,Makefile.tpl}]
indent_style = tab

[Makefile]
indent_style = tab

[*.{cmd,bat}]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
